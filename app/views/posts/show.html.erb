<section class="post-show">

	<div class="post-title">
		<h1 class="underline"><%= @post.title %></h1>
		<p class="date"><%= @post.created_at.strftime("%A, %b %d") %></p>

		<%= link_to "Edit", edit_post_path(@post) %>
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>	
	</div>

	<div class="post-content">
		<%= @post.content %>
	</div>

	<div class="share">
		<h3>Share this post on:</h3>

		<a onclick="javascript:window.open('//twitter.com/share?text=<%= @post.title %> by @s_baymammadli - &amp;url=<% url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=600, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>

		<a onclick="javascript:window.open('//facebook.com/sharer.php?u=<%= @post.title %> by Sinan Baymammadli - &amp;url=<% url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=600, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>

		<a onclick="javascript:window.open('//plus.google.com/share?url=<%= @post.title %> by Sinan Baymammadli - &amp;url=<% url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=600, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
	</div>

	<!-- <div class="other-post">
		<h3>Other Posts:</h3>
		<h2></h2>
		<h2></h2>
	</div> -->

</section>