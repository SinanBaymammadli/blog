<section class="blog">

	<h1 class="underline">Stuff I have written</h1>

	<% @posts.each do |post| %>

		<h2><a href="post_show.html"><%= link_to post.title, post %></a></h2>
		<p class="date"><%= post.created_at.strftime("%A, %b %d") %></p>

	<% end %>

	<%= will_paginate @posts %>

</section>

<style type="text/css">
	
	.pagination{
		padding: 50px 0;
	}

	.pagination a, .pagination span{
		padding: 20px;
		color: #212121;
		text-decoration: none;
		font-size: 1.3rem;
	}

	.pagination .disabled{
		color: #ADADAD;
	}

	.pagination .current{
		background-color: #2196F3;
		padding: 10px;
		margin: 10px;
		color: #ffffff;
		font-style: normal;
		font-size: 1.3rem;
	}

	.blog{
		text-align: center;
	}

</style>